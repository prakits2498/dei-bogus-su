<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menuDetailsAbsoluteLayoutID"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true" >

        <TextView
            android:id="@+id/cantina_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22sp"
            android:textColor="@color/myTurquesa"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sopa_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cantina_ID"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/carne_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sopa_ID"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/peixe_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/carne_ID"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price_text_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peixe_ID"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:textColor="@color/myTurquesa"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/price_text_ID"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/price_text_ID"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />
    </RelativeLayout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menuDetailsAbsoluteLayoutID2"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true" >

        <TextView
            android:id="@+id/cantina_ID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="22sp"
            android:textColor="@color/myTurquesa"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sopa_ID2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/cantina_ID2"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/carne_ID2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sopa_ID2"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/peixe_ID2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/carne_ID2"
            android:layout_marginBottom="10sp"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/price_text_ID2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peixe_ID2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5sp"
            android:textColor="@color/myTurquesa"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price_ID2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/price_text_ID2"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10sp"
            android:layout_toRightOf="@id/price_text_ID2"
            android:textColor="@color/myDarkGray"
            android:textSize="13sp" />
    </RelativeLayout>

</LinearLayout>