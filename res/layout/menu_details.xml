<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/menuDetailsAbsoluteLayoutID"
        android:clickable="true"
        android:focusable="true" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white" >
        
     	<TextView
		    android:id="@+id/dayOfWeek_text_ID"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentTop="true"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="22sp"
		    android:text="Semana"
		    android:textColor="@color/myTurquesa"
		    android:textSize="18sp"
		    android:textStyle="bold" />
     	
        
        <TextView
            android:id="@+id/sopa_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dayOfWeek_text_ID"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:text="sopa"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/sopaKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/sopa_ID"
            android:layout_toRightOf="@id/sopa_ID"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="2sp"
            android:textColor="@color/myTurquesa"
            android:textSize="11sp"
            android:text="kcal"/>

        <TextView
            android:id="@+id/carne_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/sopa_ID"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:text="carne"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/carneKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/carne_ID"
            android:layout_toRightOf="@id/carne_ID"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="2sp"
            android:textColor="@color/myTurquesa"
            android:text="kcal"
            android:textSize="11sp" />
        
        <TextView
            android:id="@+id/peixe_ID"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/carne_ID"
            android:layout_marginLeft="20sp"
            android:layout_marginBottom="10sp"
            android:layout_marginTop="10sp"
            android:textColor="@color/myDarkGray"
            android:text="peixe"
            android:textSize="16sp" />
        
        <TextView
            android:id="@+id/peixeKcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/peixe_ID"
            android:layout_toRightOf="@id/peixe_ID"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="2sp"
            android:text="kcal"
            android:textColor="@color/myTurquesa"
            android:textSize="11sp" />
	
        <TextView
            android:id="@+id/price_text_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/peixe_ID"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="5sp"
            android:text="PreÃ§o"
            android:textColor="@color/myTurquesa"
            android:textSize="16sp"
            android:textStyle="bold" />

		<TextView
            android:id="@+id/price_ID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
		    android:layout_centerHorizontal="true"
		    android:layout_alignTop="@id/price_text_ID"
		    android:layout_toRightOf="@id/price_text_ID"
		    android:layout_marginLeft="10sp"
            android:textColor="@color/myDarkGray"
            android:textSize="16sp" />

		<Button
		    android:id="@+id/button1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/price_text_ID"
		    android:layout_centerHorizontal="true"
		    android:layout_marginTop="15sp"
		    android:layout_marginBottom="25sp"
		    android:background="@drawable/button"
		    android:textColor="@color/myDarkGray"
		    android:text="Reservar" />

    </RelativeLayout>

</LinearLayout>